//Converting a string to an array using split on pipe(|)
<!DOCTYPE html>
<html>
<body>

<p>Click "Try it" to display the first array element, after a string split.</p>

<button onclick="myFunction()">Try it</button>

<p id="demo"></p>

<script>
function myFunction() {
  var str = "HELLO|WORLD";
  var arr = str.split("|");
  document.getElementById("demo").innerHTML = arr[1];
}
</script>

</body>
</html>

//Converting a string to an array using split on comma(,)
<!DOCTYPE html>
<html>
<body>

<p>Click "Try it" to display the first array element, after a string split.</p>

<button onclick="myFunction()">Try it</button>

<p id="demo"></p>

<script>
function myFunction() {
  var str = "H,e,l,l,o";
  var arr = str.split(",");
  document.getElementById("demo").innerHTML = arr[3];
}
</script>

</body>
</html>


